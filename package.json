{
  "name": "next-app-base",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "start": "next dev",
    "lint": "next lint"
  },
  "dependencies": {
    "clsx": "1.1.1",
    "fathom-client": "3.4.1",
    "next": "12.1.5",
    "react": "18.0.0",
    "react-dom": "18.0.0"
  },
  "devDependencies": {
    "@bjeco/prettier-config": "latest",
    "@bjeco/stylelint-config": "latest",
    "eslint": "8.13.0",
    "eslint-config-next": "12.1.5",
    "husky": "1.3.1",
    "lint-staged": "12.4.0",
    "normalize.css": "8.0.1",
    "prettier": "2.6.2",
    "sass": "1.50.1"
  },
  "prettier": "@bjeco/prettier-config",
  "stylelint": {
    "extends": "@bjeco/stylelint-config"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,scss,sass,less}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,mdx,html}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@3.2.0"
}
